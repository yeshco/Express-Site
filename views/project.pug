extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1= theProject.project_name

        p.lead.text-light
          | #{theProject.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
          each val in theProject.technologies
            li= val

        a.button.expanded(href=theProject.live_link) Live Demo
        a.button.expanded(href=theProject.github_link) GitHub Repo
        
    if  theProject.image_urls.length == 2
      each val in theProject.image_urls[1]
        img.image(src=val)
